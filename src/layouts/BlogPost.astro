---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Stars from "../components/Stars.svelte";

export interface Props {
	content: {
		title: string;
		description: string;
		pubDate?: string;
		updatedDate?: string;
		heroImage?: string;
		characterCount?: number;
		// tags?: list;
	};
}

const {
	content: { title, description, pubDate, updatedDate, heroImage, characterCount },
} = Astro.props as Props;
---

<html>
	<head>
		<BaseHead title={title} description={description} />

		
	</head>

	
	<body class="
	bg-gradient-to-b
		from-gray-900
		to-gray-800
		">
		<Header />
		<Stars client:idle></Stars>
		<main>
			<article class="
			prose
			prose-invert
			prose-sm
			lg:prose-lg
			prose-code:before:content-none prose-code:after:content-none 
			prose-img:rounded-xl
			prose-img:shadow-2xl
			">
			<h1 class="not-prose">{title}</h1>
			<div class="container flex flex-row justify-start gap-10 items-start not-prose">
				{pubDate && <p>{pubDate}</p>}
				{characterCount && <p>{Math.ceil(characterCount / 265)} minute read</p>}
			</div>
				{heroImage && (
					<img
						width={720}
						height={360}
						src={heroImage}
						alt=""
						class="not-prose"
					/>
				)}
				{updatedDate && <div>Last updated on <time>{updatedDate}</time></div>}
				<hr/>
				<slot />
			</article>
		</main>
		<Footer />
	</body>
</html>

<style>

			@font-face {
			font-family: FuturaBold;
			src: url('/FuturaHeavyfont.ttf');
			}

			article {
				font-family: FuturaBold;
			}
		</style>